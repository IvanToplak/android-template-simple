<resources>

    <!-- Base application theme -->
    <style name="Theme.Pokemon" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/pokemon_red</item>
        <item name="colorPrimaryVariant">@color/pokemon_dark_red</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/pokemon_blue</item>
        <item name="colorSecondaryVariant">@color/pokemon_dark_blue</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Typography -->
        <item name="textAppearanceHeadline4">@style/TextAppearance.Pokemon.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.Pokemon.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.Pokemon.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Pokemon.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.Pokemon.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Pokemon.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Pokemon.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.Pokemon.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.Pokemon.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.Pokemon.Overline</item>
        <!-- Other attributes -->
        <item name="loadingIndicatorBackground">@color/black_transparent_40</item>
    </style>

    <!-- Splash screen theme -->
    <style name="Theme.Pokemon.SplashScreen" parent="Theme.Pokemon">
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <!-- Main application theme -->
    <style name="Theme.Pokemon.Main" parent="Theme.Pokemon">
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">?attr/colorPrimaryVariant</item>
    </style>
</resources>