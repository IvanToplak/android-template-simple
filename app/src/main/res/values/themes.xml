<resources
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Splash screen theme -->
    <style name="Theme.PokemonApp.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="android:windowSplashScreenIconBackgroundColor" tools:targetApi="s">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_background</item>
        <item name="postSplashScreenTheme">@style/Theme.PokemonApp</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <!-- Base application theme. -->
    <style name="Theme.PokemonApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pokemon_red</item>
        <item name="colorPrimaryVariant">@color/pokemon_dark_red</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pokemon_blue</item>
        <item name="colorSecondaryVariant">@color/pokemon_dark_blue</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="android:colorBackground">@color/white</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>

        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">?attr/colorPrimaryVariant</item>
    </style>
</resources>