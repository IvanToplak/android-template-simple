<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/pokemonFragment">

    <fragment
        android:id="@+id/pokemonFragment"
        android:name="hr.from.ivantoplak.pokemonapp.ui.PokemonFragment"
        android:label="Pokemon">
        <action
            android:id="@+id/showMovesScreen"
            app:destination="@id/movesFragment" />
        <action
            android:id="@+id/showStatsScreen"
            app:destination="@id/statsFragment" />
    </fragment>
    <fragment
        android:id="@+id/movesFragment"
        android:name="hr.from.ivantoplak.pokemonapp.ui.MovesFragment"
        android:label="Moves"
        tools:layout="@layout/fragment_moves" >
        <argument
            android:name="pokemonId"
            app:argType="integer"
            android:defaultValue="0" />
    </fragment>
    <fragment
        android:id="@+id/statsFragment"
        android:name="hr.from.ivantoplak.pokemonapp.ui.StatsFragment"
        android:label="Stats"
        tools:layout="@layout/fragment_stats" >
        <argument
            android:name="pokemonId"
            app:argType="integer"
            android:defaultValue="0" />
    </fragment>
</navigation>